{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "https": {
        "url": "https://localhost:5001"
      },
      "http": {
        "url": "http://localhost:5000"
      }
    }
  },
  "ReverseProxy": {
    "Backends": {
      "backend1": {
        "LoadBalancing": {
          "Mode": "Random"
        },
        "SessionAffinity": {
          "Enabled": "true",
          "Mode": "Cookie"
        },
        "Metadata": {
          "CustomHealth": "false"
        },
        "Destinations": {
          "backend1/destination1": {
            "Address": "https://localhost:10000/"
          },
          "backend1/destination2": {
            "Address": "http://localhost:10010/"
          }
        }
      },
      "backend2": {
        "Endpoints": {
          "backend2/destination1": {
            "Address": "https://localhost:10001/"
          }
        }
      }
    },
    "Routes": [
      {
        "RouteId": "route1",
        "BackendId": "backend1",
        "Match": {
          "Methods": [ "GET", "POST" ],
          "Host": "localhost",
          "Path": "/api/{plugin}/stuff/{*remainder}"
        },
        "Transforms": [
          { "PathPattern": "/foo/{plugin}/bar/{remainder}" }
          // { "RequestHeader": "foo3", "SetRouteValue": "plugin" }, // Binds to route parameter
        ]
      },
      {
        "RouteId": "route2",
        "BackendId": "backend1",
        "Match": {
          "Host": "localhost"
        },
        "Transforms": [
          { "PathPrefix": "/apis" },
          { "PathRemovePrefix": "/apis" },
          { "PathSet": "/apis" },
          { "RequestHeadersCopy": "true" },
          { "RequestHeaderOriginalHost": "true" },
          {
            "RequestHeader": "foo0",
            "Append": "bar"
          },
          {
            "RequestHeader": "foo1",
            "Set": "bar, baz"
          },
          {
            "ResponseHeader": "foo",
            "Append": "bar",
            "When": "Always"
          }/*,
          {
            "ResponseTrailer": "foo",
            "Append": "bar",
            "When": "Always"
          }*/
        ]
      }
    ]
  }
}
